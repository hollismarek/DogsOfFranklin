<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <% if current_user && current_user.is_admin %>
          <td>

            <%= link_to('Delete', user, method: :delete, data: { confirm: 'Are you sure?' }) if current_user.id != user.id %>
            <%= link_to 'Edit', edit_user_path(user) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="button">
  <%= link_to 'New User', new_user_path %>
</div>
