<p id="notice"><%= notice %></p>

<h1>Gallery</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Breed</th>
      <th>Likes</th>
      <th>Fears</th>
      <th>Details</th>
      <th>Image Thumb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bios.each do |bio| %>
      <tr>
        <td><%= bio.name %></td>
        <td><%= bio.age %></td>
        <td><%= bio.breed %></td>
        <td><%= bio.likes %></td>
        <td><%= bio.fears %></td>
        <td><%= bio.details %></td>
        <td>
        <% if bio.main_image != nil %>
          <%= image_tag "/" + bio.main_image, alt: 'Profile image for ' + bio.name %>
        <% end %>
        </td>
        <td><%= link_to 'View', bio %>
        <% if current_user %>
        <br>
          <%= link_to 'Edit', edit_bio_path(bio) %>
          <% if current_user.is_admin %>
            <br>
            <%= link_to 'Delete', bio, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dog', new_bio_path, id: 'new_dog', class: 'button' %>
