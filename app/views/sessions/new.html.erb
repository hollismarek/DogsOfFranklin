<h2>Login</h2>
<div class="form">
  <%= form_for :session, url: login_path do |frm| %>
    <%= frm.text_field :username, placeholder: "Username" %>
    <br>
    <%= frm.password_field :password, placeholder: "Password" %>
    <br>
    <br>
    <%= frm.submit "Log in", class: "button" %>
  <% end %>
</div>
